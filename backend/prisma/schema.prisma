generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  username String     @unique
  password String
  messages Messages[]
  imageUrl String     @default("https://res.cloudinary.com/ddxkbe6lh/image/upload/v1747045497/messages_app/wwartcllts0xmbvhp6zd.jpg")
  chatroom Chatroom[]
}

model Messages {
  id           String   @id @default(uuid())
  text         String
  timestamp    DateTime @default(now())
  userId       String
  chatroom     Chatroom @relation(fields: [chatroomId], references: [id])
  chatroomId   String
  secondUserId String?
  user         User     @relation(fields: [userId], references: [id])
}

model Chatroom {
  id       String     @id @default(uuid())
  name     String?
  messages Messages[]
  users    User[]
}
