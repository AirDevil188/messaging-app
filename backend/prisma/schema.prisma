generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model User {
  id               String     @id @default(uuid())
  username         String     @unique
  password         String
  sentMessages     Messages[] @relation("SentMessages")
  receivedMessages Messages[] @relation("ReceivedMessages")
  imageUrl         String     @default("https://res.cloudinary.com/ddxkbe6lh/image/upload/v1747045497/messages_app/wwartcllts0xmbvhp6zd.jpg")
  chatroom         Chatroom[]
}

model Messages {
  id             String   @id @default(uuid())
  text           String
  timestamp      DateTime @default(now())
  user           User     @relation("SentMessages", fields: [userId], references: [id])
  userId         String
  sentMessages   User     @relation("ReceivedMessages", fields: [sentMessagesId], references: [id])
  sentMessagesId String
  chatroom       Chatroom @relation(fields: [chatroomId], references: [id])
  chatroomId     String
}

model Chatroom {
  id       String     @id @unique @default(uuid())
  messages Messages[]
  users    User[]
}
